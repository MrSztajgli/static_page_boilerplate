{
  "name": "mrsztajgli-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:css": "node-sass --output-style compressed -o dist/styles src/styles",
    "watch:scss": "onchange -i -v \"src/styles/*.scss\" -- npm run build:css",
    "start": "browser-sync -s -w",
    "watch:all": "parallelshell \"npm start\" \"npm run watch:scss\""
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.26.12",
    "node-sass": "^4.14.1",
    "onchange": "^7.0.2",
    "parallelshell": "^3.0.1"
  }
}
